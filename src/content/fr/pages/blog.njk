---
permalink: "/{{ locale }}/blog/index.html"
translationKey: "blogpage"
---

{% extends "layouts/base.njk" %}

{% set metaTitle= "Archives du blog" %}

{% block content %}

  <h2>Archive du blog</h2>
  {% for post in collections.posts_fr %}
    {% if loop.first %}<ul>{% endif %}
      <li>

        <article>
          <p><time datetime="{{ post.date | dateIso }}">{{ post.date | dateFull(locale) }}</time></p>
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        </article>

      </li>

    {% if loop.last %}</ul>{% endif %}
  {% endfor %}

{% endblock %}
